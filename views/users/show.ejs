
<h2> Usuario </h2>

<p>
	<b>Nombre de usuario:</b>
	<%= user.username %>
</p>

<p>
	<b>Es Administrador: </b>
	<%= user.isAdmin ? "SÃ­" : "No" %>
</p>

<p>
 <b><strong>Photos:</strong></b>
         <% for(var photo in photos) { %>
         <b><a href="/photos/<%= photos[photo].id %>"><%= photos[photo].name %></a></b>
     	<% } %>

<% if (session.user) { %>
<p>
	<% if (session.user.isAdmin || session.user.id === user.id) { %>
		<a href= "/users/<%= user.id %>/edit">
			<button type="button">Editar</button>
		</a>
	<% } %>
	<% if (session.user.isAdmin && session.user.id !== user.id) { %>
		<a href= "/users/<%= user.id %>?_method=DELETE">
			<button type="button"
			onclick = "return confirm('Borrar cuenta: <%= user.username %>');">
			Borrar
			</button>
		</a>
	<% } %>
</p>
<% } %>

<a href="/users">
	<button type="button">Volver</button>
</a>
